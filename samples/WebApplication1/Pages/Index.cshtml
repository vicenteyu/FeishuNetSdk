@page
@inject FeishuNetSdk.IFeishuApi feishuApi
@inject Microsoft.Extensions.Options.IOptionsMonitor<FeishuNetSdk.FeishuNetSdkOptions> feishuOptions
@inject FeishuNetSdk.IFeishuUserApi feishuUserApi
@model IndexModel
@{
    ViewData["Title"] = "Home page";

    var code = Request.Query["code"].ToString();
    var state = Request.Query["state"].ToString(); // <==在正式环境下需要验证state的合法性，注意防范CSRF攻击。

    var redirect_url = System.Web.HttpUtility.UrlEncode("https://localhost:7233/index"); //<== 运行前需要先将此URL添加到 飞书开发者后台 - 安全设置 - 重定向URL 中
    var scopes = System.Web.HttpUtility.UrlEncode(string.Join(" ", ["contact:user:search", "contact:user.employee_id:readonly"]));
}

@if (!string.IsNullOrEmpty(code))
{
    <div>
        Code: @code
    </div>
    <div>
        State: @state
    </div>

    var gettoken = await feishuApi.PostAuthenV2OauthTokenAsync(new()
    {
        Code = code,
        ClientId = feishuOptions.CurrentValue.AppId,
        ClientSecret = feishuOptions.CurrentValue.AppSecret,
        RedirectUri = "https://localhost:7233/index"
    });

    if (gettoken.AccessToken is not null)
    {
        <div>
            Token: @System.Text.Json.JsonSerializer.Serialize(gettoken.AccessToken)
        </div>

        var getresult = await feishuUserApi.GetSearchV1UserAsync(gettoken.AccessToken, query: "胡");
        if (getresult.IsSuccess && getresult.Data != null)
        {
            <div>
                搜索用户：
                @foreach (var item in getresult.Data.Users ?? [])
                {
                    <div><span>@item.Name </span>     <span> @item.OpenId</span>          <span>@string.Join(";", item.DepartmentIds ?? [])</span>         </div>
                }
            </div>
        }
    }
    else if (gettoken.Error is not null)
    {
        <div>
            Error: @gettoken.ErrorDescription
        </div>
    }
}

<div class="card-body">
    <a href="@($"https://open.feishu.cn/open-apis/authen/v1/authorize?app_id={feishuOptions.CurrentValue.AppId}&redirect_uri={redirect_url}&scope={scopes}&state={Guid.NewGuid()}")">使用飞书帐号授权</a>
</div>